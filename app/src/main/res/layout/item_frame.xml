<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_games"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/background_item_games"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_games"
        android:text="USAB"
        android:padding="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/img_games"
        app:layout_constraintTop_toBottomOf="@id/img_games"
        app:layout_constraintEnd_toEndOf="@id/img_games"/>

</androidx.constraintlayout.widget.ConstraintLayout>